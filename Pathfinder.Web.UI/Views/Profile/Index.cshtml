@model Pathfinder.Web.UI.Models.ProfileModel

@{
    ViewBag.Title = "Pathfinder | Tutorial";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div role="complementary" class="bs-sidebar hidden-print affix">
                <ul class="nav bs-sidenav">
                    <li>
                        <a href="#profile-personal-information">Personal information</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <div class="bs-docs-section">
                <div>
                    <div class="page-header">
                        <h2 id="profile-personal-information">Personal information</h2>
                    </div>
                    <p>
                    </p>
                    <div>
                        <form class="form-horizontal" role="form" method="post" action="@(Url.Action("EditPersonalInformation", "Profile"))">
                            @Html.HiddenFor(x => x.Person.Id)
                            <div class="form-group">
                                @Html.LabelFor(x => x.Person.Username, "Username", new
                                                                            {
                                                                                @class = "col-sm-2 control-label"
                                                                            })
                                <div class="col-sm-10">
                                    <span class="form-control">
                                        @Html.DisplayFor(x => x.Person.Username,
                                                                    new {
                                                                        id = "UserName"
                                                                    })
                                    </span>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Person.FirstName, "First name", new
                                                                            {
                                                                                @class = "col-sm-2 control-label"
                                                                            })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Person.FirstName, new
                                                                                  {
                                                                                      @class = "form-control",
                                                                                      id = "FirstName",
                                                                                      placeholder = "First name"
                                                                                  })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Person.LastName, "Last name", new
                                                                            {
                                                                                @class = "col-sm-2 control-label"
                                                                            })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(x => x.Person.LastName, new
                                                                                  {
                                                                                      @class = "form-control",
                                                                                      id = "LastName",
                                                                                      placeholder = "Last name"
                                                                                  })
                                </div>
                            </div>
                          <button type="submit" class="btn btn-default">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>